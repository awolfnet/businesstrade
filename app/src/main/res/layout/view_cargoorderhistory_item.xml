<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ln_merchant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_orderid_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单"
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tv_orderid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/tv_orderid_title"
                        android:layout_toRightOf="@+id/tv_orderid_title"
                        android:text="1234567890123"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/tv_ordercomment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="8米板车"
                        android:textColor="@color/black"
                        android:textIsSelectable="false" />

                    <TextView
                        android:id="@+id/tv_orderdate_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ordercomment"
                        android:layout_marginLeft="10dp"
                        android:text="下单日期： "
                        android:textColor="@color/black"
                        android:textIsSelectable="false" />

                    <TextView
                        android:id="@+id/tv_orderdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ordercomment"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/tv_orderdate_title"
                        android:layout_toRightOf="@+id/tv_orderdate_title"
                        android:text="2017/08/08"
                        android:textColor="@color/blue" />

                    <TextView
                        android:id="@+id/tv_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_orderdate_title"
                        android:layout_marginLeft="10dp"
                        android:text="金额： "
                        android:textColor="@color/black"
                        android:textIsSelectable="false" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_orderdate_title"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/tv_amount_title"
                        android:layout_toRightOf="@+id/tv_amount_title"
                        android:text="9000"
                        android:textColor="@color/blue" />

                </RelativeLayout>
                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/blue" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车主"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_cargo_plate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_seller"
                        android:text="辽A88888"
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/tv_cargo_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cargo_plate"
                        android:layout_marginLeft="10dp"
                        android:text="联系电话： "
                        android:textColor="@color/black"
                        android:textIsSelectable="false" />

                    <TextView
                        android:id="@+id/tv_cargo_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cargo_plate"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/tv_cargo_contact_title"
                        android:layout_toRightOf="@+id/tv_cargo_contact_title"
                        android:text="13888888888"
                        android:textColor="@color/black" />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货主"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_buyer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_buyer"
                        android:layout_marginLeft="10dp"
                        android:text="张三"
                        android:textColor="@color/black"
                        android:textIsSelectable="false"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_buyer_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_buyer_name"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:text="联系电话：" />

                    <TextView
                        android:id="@+id/tv_buyer_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_buyer_name"
                        android:layout_toRightOf="@+id/tv_buyer_contact_title"
                        android:layout_toEndOf="@id/tv_buyer_contact_title"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/black"
                        android:text="13999999999" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>